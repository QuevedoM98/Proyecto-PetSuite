        <Button fx:id="btnAgregarCita" layoutX="365.0" layoutY="276.0" onAction="#agregarCita" prefWidth="280.0" styleClass="button-modern" text="Agregar Cita" />
        <Button fx:id="btnModificarCita" layoutX="365.0" layoutY="346.0" onAction="#modificarCita" prefWidth="280.0" styleClass="button-modern" text="Modificar Cita" />
        <Button fx:id="btnEliminarCita" layoutX="365.0" layoutY="416.0" onAction="#eliminarCita" prefWidth="280.0" styleClass="button-modern" text="Eliminar Cita" />
        <Button fx:id="btnVerHistorial" layoutX="365.0" layoutY="486.0" onAction="#verHistorial" prefWidth="280.0" styleClass="button-modern" text="Ver Historial" />
