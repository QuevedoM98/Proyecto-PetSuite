        <Button fx:id="btnSalir" layoutX="1366.0" layoutY="225.0" onAction="#salirAplicacion" prefWidth="150.0" styleClass="button-modern" text="Salir" />

        <!-- Label para servicios pendientes -->
        <Label fx:id="lblServiciosPendientes" layoutX="744.0" layoutY="150.0" text="Servicios pendientes: 0" />
    </children>
</AnchorPane>
